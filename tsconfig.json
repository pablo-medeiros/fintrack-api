{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node","jest"],
    "isolatedModules": true
  },
  "include": ["src","tests"],
  "exclude": ["node_modules", "prisma", "dist"]
}
